# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build my-project`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t my-project`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system my-project && \
          adduser --system -G my-project my-project

COPY apps/my-project/dist my-project/
RUN chown -R my-project:my-project .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix my-project --omit=dev -f install

CMD [ "node", "my-project" ]
